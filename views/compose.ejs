<%- include('header') %>



    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/compose.png">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Our Blog</h2>
                        <div class="bt-option">
                            <a href="/home">Home</a>
                            <a href="/login">profile</a>
                            <span>Compose</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br><br><br>
        <h3 style="color: white; font-family: forte; margin-left: 200px;">Lets Write!</h3>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Contact Section Begin -->
    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-title contact-title">
                        <span>Compose Your</span>
                        <h2>BLOG</h2>
                    </div>
                    
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="leave-comment">
                        <form action="/compose" method="post">
                            <div class="row">
                            <div class="col-lg-6 col-md-6">
                            <input type="text" placeholder="Title" name="title">
                            <input type="text" placeholder="Author" name="author">
                            <input type="date" placeholder="Date" name="date">
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <textarea  placeholder="Article" class="form-control" name = "article" ></textarea>
                                <select name="topic">
                                    <option value="Embedded Systems">Embedded Systems</option>
                                    <option value="Mechanical Design">Mechanical Design</option>
                                    <option value="Internet of Things">Internet of Things</option>
                                    <option value="ROS">ROS</option>
                                    <option value="Blockchain">Blockchain</option>
                                    <option value="Machine Learning">Machine Learning</option>
                                    <option value="Image Processing">Image Processing</option>
                                  </select>
                            </div >
                            </div>
                            <button type="submit">Submit</button>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->

<%- include('footer') %>