<%- include('header') %>



    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/profile.jpg">
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Contact Section Begin -->
    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-title contact-title">
                        <span>Complete Your</span>
                        <h2>Profile <%=member.name%></h2>
                    </div>
                    
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="leave-comment">
                        <form action="/profile/<%=member.username %>" method="post" enctype="multipart/form-data">
                            <div class="row">
                            <div class="col-lg-6 col-md-6">
                            <input type="text" placeholder="Batch Eg. k17, k18" name="batch" required>
                            <input type="text" placeholder="Subteam Eg. Mechanical Subteam" name="subteam" required>
                            <input type="text" placeholder="Skillset Eg.Embedded, ML" name="skill" required>
                            </div>
                            <div class="col-lg-6 col-md-6">
                            <input type="text" placeholder="Facebook URL" name="facebook" required>
                            <input type="text" placeholder="Github URL" name="github" required>
                            <input type="text" placeholder="Instagram URL" name="instagram" required>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <label style="color: #c4c4c4;">Select a Profile Image (.jpg format upto 200Kbs)</label>
                            <input type="file" name="img"/>
                            </div>
                            <input type="hidden" name="name" value=<%= member.name %>>
                            <button type="submit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->

<%- include('footer') %>